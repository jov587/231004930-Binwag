    <?php
        echo "<h1>Exercise 1</h1>";
        $a = 15;
        $b = 7;
        $sum = $a + $b;
        $dif = $a - $b;
        $prod = $a * $b;
        $quot = $a / $b;

        echo "<ul>";
        echo "<li> Sum:" .$sum;
        echo "<li> Difference:" .$dif;
        echo "<li> Product:" .$prod;
        echo "<li> Quotient:" .$quot;
    ?>

    <?php
        echo "<h1>Exercise 2</h1>";
        $number = 1;
        if ($number % 2 == 0 ) {
            echo "$number. is an Even Number";
        }else {
            echo "$number. is an Odd Number";
        }

        if ($number > 0) {
            echo "$number. is a Positive Integer";
        } elseif ($number < 0) {
            echo "$number. is a Negative Integer";
        }else {
            echo "$number. is zero";
        }
    ?>
        <?php
        echo "<h1>Exercise 3 </h1>" . "<br>";
        for ($i = 1; $i <=100;$i++) {
            if ($i % 3 == 0 && $i % 5 == 0){
                echo "FizzBuzz";
            }elseif ($i % 3 == 0){
                echo "Fizz";
            }elseif ($i % 5 == 0){
                echo "Buzz";
            }else {
                echo "$i";
            }
        }

        echo "<p><strong>Fibonacci sequence</strong></p>".<br>;

        $first = 0;
        $second = 1;

        for ($i = 1; $i <= 10;$i++) {
            $next = $first + $second;

            if($next % 2 == 0) {
                echo "$next";
            }

        $first = $second;
        $second = $next;
    }

    echo "<h1>Exercise 4 </h1>" . "<br>";
    
    ?>
